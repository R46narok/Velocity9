<div class="col-4 pb-3">
    <div class="d-flex mx-3">
        <div class="my-auto p-2" style="border-radius: 7px;background-color: #45B26B;">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -64 640 640" width="1em" height="1em" fill="currentColor" style="vertical-align: middle;/*font-size: 18px;*/color: white;">
                <path d="M104 96h-48C42.75 96 32 106.8 32 120V224C14.33 224 0 238.3 0 256c0 17.67 14.33 32 31.1 32L32 392C32 405.3 42.75 416 56 416h48C117.3 416 128 405.3 128 392v-272C128 106.8 117.3 96 104 96zM456 32h-48C394.8 32 384 42.75 384 56V224H256V56C256 42.75 245.3 32 232 32h-48C170.8 32 160 42.75 160 56v400C160 469.3 170.8 480 184 480h48C245.3 480 256 469.3 256 456V288h128v168c0 13.25 10.75 24 24 24h48c13.25 0 24-10.75 24-24V56C480 42.75 469.3 32 456 32zM608 224V120C608 106.8 597.3 96 584 96h-48C522.8 96 512 106.8 512 120v272c0 13.25 10.75 24 24 24h48c13.25 0 24-10.75 24-24V288c17.67 0 32-14.33 32-32C640 238.3 625.7 224 608 224z"></path>
            </svg>
        </div>
        <div class="mx-4">
            <p class="fw-bold m-0 p-0">@Name</p>
            <p class="m-0 p-0" style="color: #777E90;">Some caption</p>
        </div>
    </div>
</div>
<div class="col-auto">
    <div class="mx-4">
        <p class="fw-bold m-0 p-0">Sets</p>
        <p class="m-0 p-0" style="color: #777E90;">@Sets</p>
    </div>
</div>
@if (ShowIntensity)
{
    <div class="col-auto">
        <div class="mx-4">
            <p class="fw-bold m-0 p-0">Intensity</p>
            <p class="m-0 p-0" style="color: #777E90;">Moderate</p>
        </div>
    </div>
}
<div class="col mx-2 mt-1 d-flex justify-content-end">
    <div>
        <button class="btn btn-primary" type="button" style="float: right;border-radius: 20px;" @onclick="() => OnNextButtonClicked?.Invoke()">
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="-32 0 512 512" width="1em" height="1em" fill="currentColor">
                    <path d="M438.6 278.6l-160 160C272.4 444.9 264.2 448 256 448s-16.38-3.125-22.62-9.375c-12.5-12.5-12.5-32.75 0-45.25L338.8 288H32C14.33 288 .0016 273.7 .0016 256S14.33 224 32 224h306.8l-105.4-105.4c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0l160 160C451.1 245.9 451.1 266.1 438.6 278.6z"></path>
                </svg>
            </span>&nbsp;Next
        </button>
        <button class="btn btn-primary mx-2" type="button" style="float: right;background-color: #23262F;border-color: #777e90;border-radius: 20px;border-width: 2px;"
                @onclick="() => OnExpandButtonClicked?.Invoke()">
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="-96 0 512 512" width="1em" height="1em" fill="currentColor" style="color: #777e90;vertical-align: inherit;">
                    <path d="M311.9 335.1l-132.4 136.8C174.1 477.3 167.1 480 160 480c-7.055 0-14.12-2.702-19.47-8.109l-132.4-136.8C-9.229 317.8 3.055 288 27.66 288h264.7C316.9 288 329.2 317.8 311.9 335.1z"></path>
                </svg>
            </span>
        </button>
    </div>
</div>


@code {

    [Parameter]
    public bool ShowIntensity { get; set; } = true;

    [Parameter]
    public Action? OnNextButtonClicked { get; set; }

    [Parameter]
    public Action? OnExpandButtonClicked { get; set; }

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public int? Sets { get; set; }

}