@using V9.UI.Portal.Services.Skeletal.Views
@inject NavigationManager NavigationManager

<div @onclick="OnClicked" class="col-4" style="animation: fade-in 2s; cursor: pointer;">
    <img class="w-100" style="border-radius: 15px;" src="@Thumbnail">
    <h4 class="text-white mt-2">@View.Name<span class="px-2 fw-bold mt-1" style="float: right;border-radius: 5px;font-size: 15px;color: #FF592C;border: 2px solid #FF592C;">Back</span></h4>
    <p style="color: #777E90;">@View.Description</p>
    <hr class="m-1 p-0" style="color: #777E90;">
    <p class="text-white mx-1" style="vertical-align: top;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="1em" height="1em" fill="currentColor" style="vertical-align: sub;font-size: 18px;">
