</div>

@code {
    [Parameter, EditorRequired] public ExerciseView View { get; set; }
    [Parameter] public string? Thumbnail { get; set; }

    private void OnClicked()
    {
        NavigationManager.NavigateTo($"/exercise/{View.Name}");
    }
}